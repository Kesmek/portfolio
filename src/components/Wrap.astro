---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["row", className]}>
  <slot />
</div>

<style>
  @layer components {
    .row {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      width: 100%;
      justify-content: center;
      align-items: center;
    }
  }
</style>
